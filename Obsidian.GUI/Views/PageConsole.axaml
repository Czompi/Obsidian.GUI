<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Obsidian.GUI.Views.PageConsole">
	<Grid Background="Black">
		<Grid.RowDefinitions>1*,Auto</Grid.RowDefinitions>
		<Label Content="{Binding Log}" Foreground="White" FontSize="12" FontFamily="/Assets/Fonts/Roboto-Thin.ttf"/>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>1*,Auto</Grid.ColumnDefinitions>
			<TextBox VerticalContentAlignment="Center" FontSize="16" FontWeight="Thin" FontFamily="/Assets/Fonts/Roboto-Thin.ttf"/>
			<Button Grid.Column="1" Classes="btn btn-secondary" Content="Send" />
		</Grid>
	</Grid>
</UserControl>
